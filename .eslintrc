{
  "parser": "babel-eslint",
  "extends": [
    "airbnb/base"
  ],
  "rules": {
    "comma-dangle": [
      2,
      "never"
    ],
    "indent": [
      2,
      "tab"
    ],
    "quotes": [
      2,
      "double"
    ],
    "object-curly-spacing": [
      2,
      "never"
    ]
  },
  "env": {
    "mocha": true
  }
}
